-unless notice.nil?
  .alert.alert-info
    %span= notice


%h1= @post.title

-@post.tag_names.each do |tag|
  %span.badge.badge-primary=tag

%p
  Posted by:
  = @post.user.name
  for
  = @post.department.department_name

%p
  Post type:
  = @post.post_type

%p.lead= @post.details.html_safe

%div
  =link_to 'Edit', edit_post_path(@post)
  |
  =link_to 'Back', department_path(@post.department.id)
