#footer
  .footer-container
    .container
      .blocks
        .block.logo
          =render 'shared/logo', {color: 'white'}
        .block.links
          %label Departments
          -get_departments.each do |dept|
            %a{href: department_path(dept)}=dept.name
        .block.links
          %label Resources
          %a{:href => "/leadership.html"} Leadership
          %a{:href => "/mission.html"} Our Mission
          %a{:href => "/faqs.html"} FAQs
          %a{:href => "/linkto.html"} Forms
        .block.links
          %label More resources
          %a{:href => "/howtos.html"} How-Tos
          %a{:href => "https://www.hendrickcareers.com/Hendrick-University-.html"} Hendrick University

        .block.links.social
          %label Stay updated
          %a{:href => "#"}
            %span.fab.fa-facebook
          %a{:href => "#"}
            %span.fab.fa-twitter
          %a{:href => "#"}
            %span.fab.fa-youtube
